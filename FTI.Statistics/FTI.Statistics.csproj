    <Copyright>©FTIRD, 2025 Soumyadip Majumder. All rights reserved.</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <None Include="assets/mynugetlogo.png" Pack="true" PackagePath="\" />

    <None Include="README.md">
      <Pack>true</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
</Project>

